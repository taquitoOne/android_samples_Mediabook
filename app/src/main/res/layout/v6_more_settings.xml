<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:elevation="@dimen/toolbar_elevation"
        android:minHeight="56dp"
        app:navigationIcon="@drawable/round_arrow_back_24"
        app:title="@string/settings_btn" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_settings"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryBrowser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/category_sheet_start"
                android:layout_marginTop="@dimen/category_sheet_top"
                android:layout_marginBottom="@dimen/category_sheet_bottom"
                android:clickable="true"
                android:focusable="true"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/categoryBrowser"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textColor="@color/settings_info_color" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/javascript_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/categoryBrowser"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/setting_sw1"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/javascript_btn"
                android:layout_marginStart="@dimen/category_sheet_start"
                android:layout_marginTop="@dimen/category_sheet_top"
                android:layout_marginBottom="@dimen/category_sheet_bottom"
                android:clickable="true"
                android:focusable="true"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/theme_title"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textColor="@color/settings_info_color" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/apptheme_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/categoryTheme"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:lines="1"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:text="@string/theme_lights_title"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/navigation_label_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/apptheme_btn"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:lines="1"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:text="@string/setting_sw26"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/hide_toolbar_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/navigation_label_btn"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:lines="1"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:text="@string/setting_sw27"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/hidesocial_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/hide_toolbar_btn"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/hide_apps"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categorySecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hidesocial_btn"
                android:layout_marginStart="@dimen/category_sheet_start"
                android:layout_marginTop="@dimen/category_sheet_top"
                android:layout_marginBottom="@dimen/category_sheet_bottom"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/categorySecurity"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textColor="@color/settings_info_color" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/privacy_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/categorySecurity"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/setting_sw4"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryAccessibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/privacy_btn"
                android:layout_marginStart="@dimen/category_sheet_start"
                android:layout_marginTop="@dimen/category_sheet_top"
                android:layout_marginBottom="@dimen/category_sheet_bottom"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/categoryAccessibility"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textColor="@color/settings_info_color" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/mutesounds_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/categoryAccessibility"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/setting_sw29"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/nosleep_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/mutesounds_btn"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/setting_sw5"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryPermits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nosleep_btn"
                android:layout_marginStart="@dimen/category_sheet_start"
                android:layout_marginTop="@dimen/category_sheet_top"
                android:layout_marginBottom="@dimen/category_sheet_bottom"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/categoryPermits"
                android:textAllCaps="true"
                android:textColor="@color/settings_info_color"
                android:textSize="13sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/location_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/categoryPermits"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:lines="1"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:text="@string/setting_sw23"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/storage_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/location_btn"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:lines="1"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:text="@string/setting_sw24"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cookies_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/storage_btn"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:singleLine="false"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/setting_sw7"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryMera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cookies_btn"
                android:layout_marginStart="@dimen/category_sheet_start"
                android:layout_marginTop="@dimen/category_sheet_top"
                android:layout_marginBottom="@dimen/category_sheet_bottom"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textColor="@color/settings_info_color" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/clearcache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/categoryMera"
                android:layout_marginTop="6dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:text="@string/clear_files"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/clear_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@id/clearcache"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="@dimen/setting_sheet_bottom"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/setting_sheet_start"
                android:paddingTop="@dimen/setting_sheet_top"
                android:paddingEnd="@dimen/setting_sheet_end"
                android:paddingBottom="@dimen/setting_sheet_bottom"
                android:text="@string/clear_setting"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/settings_text_color"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="44dp" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
